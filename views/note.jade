- if (user)
	!!!5
	html
		head
			title Clárú
			include ./head
		body
			.content
				include ./menu
				.noteBox
					- if (note[0]){
					- each item in note
						input#noteTitle(type='text' name='noteTitle' placeholder='Title' value='#{item.title}')

						.noteSettings#noteSettings.box-shadow-light.trans
							.menu.bg-white-shade.box-shadow-thin
								li#menuShare Share
								li#menuDelete Delete

						

						
						br
						textarea#noteContent(name='noteContent' cols='50' rows='20' placeholder='Note...') #{item.message}
						#divShare.divShare.align-center
							a
								#closeDiv X
							- if (note[0].shareurl){
									| Public URL:
									br
									input#url.share(type='text' value='http://#{shareurl + "/" + item.shareurl}')
									br
									button#unShare(data-id='#{item.id}') Make Private
							-	}
							-	else{
								button.al-right#share.share(data-id='#{item.id}') Share Note
							-	}
						#divDelete.divDelete.align-center	
							a
								#closeDiv X	
							button#deleteItem(data-id='#{item.id}')	Delete
					- } 
					- else{
						h2 Note not found!
					-	}	
			include ./newnote


