@import 'nib'
@import '../../css/imports/colors'

align-vertical()
  display: block
  position: relative
  top: 50%
  -webkit-transform: translateY(-50%)

.actionbutton
  fixed: bottom 10% right 10%
  background: red
  width: 75px
  height: 75px
  border-radius: 100%
  color: white
  box-shadow: 0 3px 10px #555
  text-align: center
  .icon
    align-vertical()
    width: 50px
    height: 50px
    margin-left: 12px
    font-size: 30px


