@import 'nib'
@import '../../css/imports/colors'
@import '../../css/mixins/aligns'

align-vertical()
  display: block
  position: relative
  top: 50%
  -webkit-transform: translateY(-50%)

.actionbutton
  cursor: pointer
  fixed: bottom 10% right 10%
  background: red
  width: 65px
  height: 65px
  border-radius: 100%
  color: white
  box-shadow: 0 3px 10px #555
  text-align: center
  z-index: 11
  .icon
    align()
    width: 40px
    height: 40px
