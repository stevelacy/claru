@import 'nib'

align-vertical()
  display: block
  position: relative
  top: 50%
  -webkit-transform: translateY(-50%)
.toast
  transition: all 1s
  fixed: bottom 0 left 0 right 0
  height: 8vh
  background: rgba(60, 60, 60, .8)
  color: white
  padding: 10px
  z-index: 7
  .title
    font-size: 20px
    align-vertical()
