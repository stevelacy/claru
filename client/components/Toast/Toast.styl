@import 'nib'

align-vertical()
  display: block
  position: relative
  top: 50%
  -webkit-transform: translateY(-50%)
.toast
  transition: all 1s
  fixed: bottom 0 left 0 right 0
  height: 8vh
  background: rgba(60, 60, 60, .8)
  color: white
  padding: 10px
  z-index: 7
  .title
    font-size: 16px
    align-vertical()
  .right
    absolute: right 0 bottom 0 top 0
    width: 40%
    text-align: center
    button
      display: inline-block
