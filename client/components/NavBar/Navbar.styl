@require 'nib'
@require '../../css/mixins/aligns'
@require '../../css/mixins/fonts'
@import '../../css/imports/colors'

align-vertical()
  display: block
  position: relative
  top: 50%
  -webkit-transform: translateY(-50%)

.navbar
  fixed top 0 left 0 right 0
  height 10vh
  width 100%
  background: rgba(125, 211, 124, 1)
  color: white
  z-index: 9
  .left
    absolute left 0 top 0
    height: 100%
    width: 15%
  .center
    absolute left 15% top 0 right 15%
    height: 100%
  .right
    absolute right 0 top 0
    height: 100%
    width: 15%
  .title
    align-vertical()
    margin-top: 5px
    font-size: 30px
    width: 50%
  .button
    align-vertical()
    background: transparent
    border: none
    box-shadow: none
    height: 75%
    width: 75%
    margin: 0
    margin-left: 12.5%
    padding: 5%
    font-size: 25px
    color: #fff
