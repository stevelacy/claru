@import 'nib'
@import '../../css/mixins/fonts'

.main.search
  .page
    min-height: 90vh
    margin-top: 10vh
    padding: 5%
    text-align: center
    input
      width: 100%
      background: rgba(255, 255, 255, .6)
      outline: none
      font-size: 20px
      padding: 20px
      margin-bottom: 30px
    .item
      position: relative
      width: 100%
      display: inline-block
      background: #fff
      border-bottom: 1px solid #efefef
      margin: 2px
      cursor: pointer
      text-align: left
      overflow: hidden
      box-shadow: 0 1px 1px #bababa
      .title
        width: 80%
        padding: 12px
        font-size: 30px
      .message
        absolute: top 58px left right bottom
        height: 50px
        overflow: hidden
        background: #fff
        padding: 0 15px 0px
        white-space: pre
        .fade
          height: 50px
          absolute: top left right bottom
          box-shadow: inset 0 -100px 50px -80px #fff
  @media all and (min-width: 770px)
    .page
      input
        width: 50%
      margin-top: 100px
      .items
        .item
          width: 50%
