@import 'nib'

.main
  &.index
    .page
      min-height: 90vh
      margin-top: 10vh
      padding: 5%
      .items
        text-align: center
        .item
          position: relative
          width: 100%
          height: 60px
          padding: 10px
          display: inline-block
          background: #fff
          border-bottom: 1px solid #efefef
          margin: 2px
          cursor: pointer
          text-align: left
          .title
            width: 80%
            min-height: 30px
            padding: 10px
            font-size: 20px
          .destroy
            absolute: top 0px right 10px
            font-size: 25px
            color: red
            background: transparent
            box-shadow: none
            border: 0
    @media all and (min-width: 770px)
      .page
        .items
          .item
            width: 50%
